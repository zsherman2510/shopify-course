        },
        {
            "type": "color",
            "id": "button_color",
            "label": "Button Color",
            "default": "#333"
        },
        {
            "type": "color",
            "id": "button_hover_color",
            "label": "Button Hover Color",
            "default": "#737171"
        },
        {
            "type": "color",
            "id": "sold_old_color",
            "label": "Sold Out Color",
            "default": "#000000"
        },
        {
            "type": "color",
            "id": "on_sale_color",
            "label": "On Sale Color",
            "default": "#900"
        }
    
    ],
    "presets": [
        {
            "name": "Custom Feat Collection"
        }
    
    ]
