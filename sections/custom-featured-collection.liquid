{
    "name": "Custom Feat Collection",
    "settings": [
        {
            "type": "text",
            "id": "section_title",
            "label": "Section Title",
            "default": "#Featured on Fashion Week"
        },
        {
            "type": "collection",
            "id": "custom_featured_collection",
            "label": "Collection"
        },
        {
            "type": "range",
